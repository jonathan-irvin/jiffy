rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /gifs/{document=**}{
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid != null;
    }
    match /categories/{document=**}{
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid != null;
    }
  }
}